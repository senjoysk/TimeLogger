# Staging環境用環境変数テンプレート
# .env.staging.example → .env.staging にコピーして使用

# ===============================
# 基本設定
# ===============================
NODE_ENV=staging
TZ=Asia/Kolkata
PORT=3000

# ===============================
# Discord Bot設定
# ===============================
# Staging用Discord Bot Token（本番とは別Bot推奨）
DISCORD_TOKEN=your_staging_discord_bot_token_here
DISCORD_CLIENT_ID=your_staging_discord_client_id_here

# ===============================
# Google Gemini API設定
# ===============================
# Staging用APIキー（本番と同一でも可）
GOOGLE_API_KEY=your_gemini_api_key_here

# ===============================
# 夜間サスペンド設定
# ===============================
# Staging専用トークン（本番とは別値推奨）
SHUTDOWN_TOKEN=your_staging_shutdown_token_here
WAKE_TOKEN=your_staging_wake_token_here
RECOVERY_TOKEN=your_staging_recovery_token_here