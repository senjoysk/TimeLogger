{
  "name": "discord-task-logger",
  "version": "1.0.0",
  "description": "Discord Bot for tracking daily tasks and activities",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "watch": "ts-node --watch src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "bot:start": "./scripts/bot-manager.sh start",
    "bot:stop": "./scripts/bot-manager.sh stop",
    "bot:restart": "./scripts/bot-manager.sh restart",
    "bot:status": "./scripts/bot-manager.sh status",
    "bot:logs": "./scripts/bot-manager.sh logs"
  },
  "keywords": [
    "discord",
    "bot",
    "task",
    "logger",
    "productivity"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "node-cron": "^3.0.3",
    "sqlite3": "^5.1.6",
    "timezones.json": "^1.7.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^9.0.7",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
