                            },
                            body: JSON.stringify(requestData)
                        });
                        
                        const data = await response.json();
                        this.testResult = data;
                        
                        if (data.success) {
                            this.showAlert('success', 'ãƒ†ã‚¹ãƒˆãŒå®Œäº†ã—ã¾ã—ãŸ');
                        } else {
                            this.showAlert('error', data.error || 'ãƒ†ã‚¹ãƒˆã®å®Ÿè¡Œã«å¤±æ•—ã—ã¾ã—ãŸ');
                        }
