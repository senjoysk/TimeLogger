    <script>
        // ãƒ™ãƒ¼ã‚¹ãƒ‘ã‚¹ã‚’å–å¾—
        const basePath = '<%= basePath %>' || '';
        
        function summaryTest() {
            return {
                systemStatus: null,
                users: [],
                testResult: null,
                isLoading: false,
                userSelectionMode: 'all',
                testForm: {
                    dryRun: true,
                    testDateTime: '',
                    targetUsers: []
